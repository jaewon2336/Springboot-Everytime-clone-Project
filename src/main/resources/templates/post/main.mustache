<body>
    <div class="header">
        <nav class="navbar-expand-sm fixed-top my_navbar_flex my_bg_primary my_navbar">
            <div class="my_navbar_flex">
                <!--Logo-->
                <div class="my_navbar_flex my_pl_md_1 my_space">
                    <a class="navbar-brand" href="/">
                        <img src="/images/nav.logo.png" width="40" height="40" class="d-inline-block align-text-top">
                    </a>
                    <div>
                        <div class="my_logo_title">에브리타임</div>
                        <div class="my_logo_school">경상국립대 칠암캠</div>
                    </div>
                </div>

                <!--Nav Menu-->
                <div class="my_nav_menu my_space">
                    <li id="my_menu_board" class="my_menu_active">
                        <a id="header_menu_board" href="/">게시판</a>
                    </li>
                    <li id="my_menu_timetable">
                        {{#principal}}
                        <a href="/s/user/{{principal.id}}/timetable">시간표</a>
                        {{/principal}}
                        {{^principal}}
                        <a href="/user/login-form">시간표</a>
                        {{/principal}}
                    </li>
                    <li id="my_menu_course">
                        <a href="#">강의평가</a>
                    </li>
                    <li id="my_menu_grade">
                        <a href="#">학점계산기</a>
                    </li>

                </div>

                <!--Nav My-->
                <div class="my_header_icon_flex my_space">
                    {{#principal}}
                    <div class="my_header_icon_box">
                        <a href="#">
                            <img src="/images/icn_chat.png" width="22" height="22" />
                        </a>
                    </div>
                    <div class="my_header_icon_box">
                        <a href="/s/user/{{id}}">
                            <img src="/images/icn_account.png" width="22" height="22" />
                        </a>
                    </div>
                    {{/principal}}
                    {{^principal}}
                    <div class="my_header_icon_no_auth_login_box">
                        <a href="/user/login-form">
                            로그인
                        </a>
                    </div>
                    <div class="my_header_icon_no_auth_join_box">
                        <a href="/user/join-form" style="color: white;">
                            회원가입
                        </a>
                    </div>
                    {{/principal}}
                </div>

            </div>
        </nav>

        {{> /layout/subMenu}}

        <div class="my_main_body">
            <div class="container mv_25">

                <!-- 왼쪽 메뉴 시작 -->
                <div class="leftside">

                    <!-- 로그인 -->
                    {{#principal}}
                    <div class="box_profile color_secondary mb_5">
                        <img class="img_profile" src="/images/profileImg.png">
                        <div class="nickname">{{nickname}}</div>
                        <div class="name">{{name}}</div>
                        <div class="name">{{username}}</div>
                        <div class="btns mt_15">
                            <a class="btn_profile btn_myinfo" href="/s/user/{{id}}">내 정보</a>
                            <a class="btn_profile btn_logout" href="/logout">로그아웃</a>
                        </div>
                    </div>

                    <div class="box_small color_secondary mb_5">

                        <div class="box_small_list"><a class="myarticle" href="/s/user/{{principal.id}}/post">내가 쓴 글</a>
                        </div>
                        <div class="box_small_list"><a class="mycommentarticle"
                                href="/s/user/{{principal.id}}/comment">댓글 단 글</a></div>
                        <div class="box_small_list"><a class="myscrap" href="/s/user/{{principal.id}}/scrap">내 스크랩</a>
                        </div>

                    </div>
                    {{/principal}}
                    {{^principal}}
                    <!-- 비로그인 -->
                    <div class="box_profile color_secondary mb_5">
                        <div class="txt_auth_info">
                            <p>커뮤니티 이용을 위해</p>
                            <p><span>로그인</span>이 필요합니다!</p>
                        </div>
                        <div class="btns_auth mt_15">
                            <a class="btn_profile_login" href="/user/login-form">로그인</a>
                            <a class="btn_profile_join" href="/user/join-form">에브리타임 회원가입</a>
                        </div>
                    </div>
                    {{/principal}}



                </div>
